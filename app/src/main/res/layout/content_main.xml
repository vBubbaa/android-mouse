<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="50px"
        android:layout_height="50px"
        android:elevation="500dp"
        android:src="@drawable/circle1"
        tools:layout_editor_absoluteX="356dp"
        tools:layout_editor_absoluteY="172dp"></ImageView>

    <org.opencv.android.JavaCameraView
        android:id="@+id/CameraView"
        android:layout_width="732dp"
        android:layout_height="362dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></org.opencv.android.JavaCameraView>

    <Button
        android:id="@+id/mybutton"
        android:layout_width="389dp"
        android:layout_height="244dp"
        android:clickable="true"
        android:onClick="printStarter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clickbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/CameraView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/buttonShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="313dp" />


</androidx.constraintlayout.widget.ConstraintLayout>